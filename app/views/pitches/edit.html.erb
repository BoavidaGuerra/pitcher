<%= render 'shared/side_menu' %>
<%= render 'shared/form_header' %>
  <div class="row mt-5 d-flex justify-content-center">
    <div class="col-12 col-xs-10 col-lg-7">

        <%= simple_form_for [@demo, @pitch]  do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :pain,
                      as: :text,
                      label: "Pain",
                      required: true,
                      autofocus: true,
                      :input_html => { :rows => 1}
                      %>

          <%= f.input :target,
                      as: :text,
                      label: "Target",
                      required: true,
                      autofocus: true,
                      :input_html => { :rows => 1}
                      %>


          <%= f.input :solution,
                      as: :text,
                      label: "Solution",
                      required: true,
                      autofocus: true,
                      :input_html => { :rows => 1}
                      %>
        </div>
        <div class="form-actions d-flex">
          <%= link_to "Back", :back, {:class=>'btn btn-primary'} %>
          <%#= link_to "Back", dashboard_path, {:class=>'btn btn-primary back-btn'} %>
          <%= f.button :submit, "Update", class: 'btn btn-primary next-btn' %>
        </div>
      <% end %>
  </div>
</div>
