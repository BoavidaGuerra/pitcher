<div class="container">
  <div class="row mt-5">
    <div class="col-12 col-sm-8 col-md-4 offset-sm-2 offset-md-4">
      <h2 class="mb-4">New Pitch</h2>
        <%= simple_form_for [@demo, @pitch]  do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :pain,
                      as: :text,
                      label: "Pain",
                      required: true,
                      autofocus: true
                      %>

          <%= f.input :target,
                      as: :text,
                      label: "Target",
                      required: true,
                      autofocus: true
                      %>


          <%= f.input :solution,
                      as: :text,
                      label: "Solution",
                      required: true,
                      autofocus: true
                      %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Create a new pitch", class: 'btn btn-primary w-100 mb-2' %>
        </div>
      <% end %>
  </div>
</div>
