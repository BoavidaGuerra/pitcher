<div id="sidebar" class="sidebar">

  <h4><%= @demo.name %></h4>
  <%= link_to "Pitch", edit_demo_pitch_path(@demo, @demo.pitches.first.id), {:class=>'', "data-controller": 'tooltip', "data-tippy-content": 'Back to dashboard'} %>
  <%= @demo.pitches.first.pain %>
  <%= @demo.pitches.first.solution %>
  <%= @demo.pitches.first.target %>
  <% if @demo.personas.any? %>
    <% @demo.personas.each do |persona| %>
      <%= persona.name %>
      <%= persona.bio %>
      <!-- In a accordion or a dropdown show following info -->
        <%= persona.age %>
        <%= persona.job %>
        <%= persona.location %>
        <%= persona.nationality %>
        <%= persona.relationship_status %>
        <%= persona.income %>
      <!-- End-->
      <% if persona.userjourneys.any? %>
        <% persona.userjourneys.each do |journey| %>
          <%= link_to "View #{persona.name}'s #{journey.name} Journey.", demo_userjourney_path(@demo, journey.id), {:class=>'', "data-controller": 'tooltip', "data-tippy-content": 'Back to dashboard'} %>
        <% end %>
      <% end %>
      <% if persona.userjourneys.count < 2 %>
        <%= link_to "Add a new journey.", new_demo_userjourney_path(@demo), {:class=>'', "data-controller": 'tooltip', "data-tippy-content": 'Back to dashboard'} %>
      <% end %>
    <% end %>
  <% end %>
  <% if @demo.personas.count < 2 %>
    <%= link_to "Add a new persona.", new_demo_persona_path(@demo), {:class=>'', "data-controller": 'tooltip', "data-tippy-content": 'Back to dashboard'} %>
  <% end %>
</div>

<button class="btn-sidemenu">&#9776;</button>

